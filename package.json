{
  "name": "clean-node-api",
  "version": "1.2.1",
  "description": "NodeJs Rest API using TDD, Clean Architecture and Typescript",
  "author": "Rodrigo Manguinho",
  "license": "ISC",
  "repository": "github:rmanguinho/clean-ts-api",
  "scripts": {
    "start": "node -r tsconfig-paths/register -r ts-node/register dist/src/main/server.js",
    "build": "rimraf dist && tsc",
    "debug": "nodemon --nolazy ./src/main/server.ts",
    "up": "docker-compose up -d",
    "down": "docker-compose down",
    "test": "jest --passWithNoTests --silent --noStackTrace --runInBand",
    "test:verbose": "jest --passWithNoTests --runInBand",
    "test:unit": "npm --scripts-prepend-node-path test -- --watch -c jest-unit-config.js",
    "test:integration": "npm --scripts-prepend-node-path test -- --watch -c jest-integration-config.js",
    "test:staged": "npm --scripts-prepend-node-path test -- --findRelatedTests",
    "test:ci": "npm --scripts-prepend-node-path test -- --coverage"
  },
  "devDependencies": {
    "@shelf/jest-mongodb": "^1.2.3",
    "@types/bcrypt": "^3.0.0",
    "@types/express": "^4.17.8",
    "@types/jest": "^26.0.14",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/mongodb": "^3.5.27",
    "@types/node": "^14.11.2",
    "@types/supertest": "^2.0.10",
    "@types/swagger-jsdoc": "^3.0.2",
    "@types/swagger-ui-express": "^4.1.2",
    "@types/validator": "^13.1.0",
    "@typescript-eslint/eslint-plugin": "^4.3.0",
    "eslint": "^7.10.0",
    "eslint-config-standard-with-typescript": "^19.0.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "git-commit-msg-linter": "^3.0.0",
    "husky": "^4.3.0",
    "jest": "^26.4.2",
    "lint-staged": "^10.4.0",
    "rimraf": "^3.0.2",
    "supertest": "^4.0.2",
    "ts-jest": "^26.4.0",
    "typescript": "^4.0.3"
  },
  "dependencies": {
    "bcrypt": "^5.0.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "mongodb": "^3.6.2",
    "nodemon": "^2.0.4",
    "swagger-jsdoc": "^4.2.0",
    "swagger-ui-express": "^4.1.4",
    "ts-node": "^9.0.0",
    "tsconfig-paths": "^3.9.0",
    "validator": "^13.1.17"
  },
  "engines": {
    "node": "12.x"
  }
}